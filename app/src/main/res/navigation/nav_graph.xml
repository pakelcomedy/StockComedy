<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- Splash Fragment -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.pakelcomedy.stockcomedy.ui.splash.SplashFragment"
        android:label="Splash Screen"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.pakelcomedy.stockcomedy.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_earnFragment"
            app:destination="@id/earnFragment" />
        <action
            android:id="@+id/action_homeFragment_to_portoFragment"
            app:destination="@id/portoFragment" />
    </fragment>

    <!-- Earn Money Fragment -->
    <fragment
        android:id="@+id/earnFragment"
        android:name="com.pakelcomedy.stockcomedy.ui.earnmoney.EarnMoneyFragment"
        android:label="Earn Money">
        <action
            android:id="@+id/action_earnFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_earnFragment_to_portoFragment"
            app:destination="@id/portoFragment" />
    </fragment>

    <!-- Portofolio Fragment -->
    <fragment
        android:id="@+id/portoFragment"
        android:name="com.pakelcomedy.stockcomedy.ui.portfolio.PortfolioFragment"
        android:label="Portofolio" />
</navigation>