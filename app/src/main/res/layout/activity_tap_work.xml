<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/colorBackground">

    <!-- Display Current Earnings or Points -->
    <TextView
        android:id="@+id/tvCurrentPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points: 0"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <!-- Tap Button for Earning Points -->
    <Button
        android:id="@+id/btnTapToEarn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to Earn"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:padding="16dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_marginBottom="32dp"/>

    <!-- Display Last Earned Points -->
    <TextView
        android:id="@+id/tvLastEarned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Earned: 0 Points"
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="16dp"/>

</LinearLayout>
