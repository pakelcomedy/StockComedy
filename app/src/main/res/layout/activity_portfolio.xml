<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Panel 1: Trading Balance, Total Equity, P&L -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <!-- Trading Balance -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvTradingBalanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trading Balance"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTradingBalanceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_light" />
        </LinearLayout>

        <!-- Total Equity -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvTotalEquityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Equity"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTotalEquityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_light" />
        </LinearLayout>

        <!-- P&L -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvPnLLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P&amp;L"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPnLValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_light" />
        </LinearLayout>
    </LinearLayout>

    <!-- Panel 2: List Saham yang Dimiliki Player -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/portfolioContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Example of a Portfolio Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvStockName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Name"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvStockQuantity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Quantity: 10"/>

                    <TextView
                        android:id="@+id/tvStockPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Price: $100"/>

                    <TextView
                        android:id="@+id/tvStockCurrentValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Current Value: $150"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvStockProfitLoss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profit/Loss: $50"
                    android:textStyle="italic"
                    android:textColor="@android:color/holo_green_light"/>
            </LinearLayout>
            <!-- End of Example Portfolio Item -->

        </LinearLayout>
    </ScrollView>

</LinearLayout>
