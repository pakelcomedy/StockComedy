<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        cardview:cardElevation="4dp"
        cardview:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Stock Name -->
            <TextView
                android:id="@+id/tvStockName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Stock Quantity, Price, and Current Value -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Quantity -->
                <TextView
                    android:id="@+id/tvStockQuantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quantity: 10"
                    android:textColor="@android:color/darker_gray" />

                <!-- Price -->
                <TextView
                    android:id="@+id/tvStockPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Price: $100"
                    android:textColor="@android:color/darker_gray" />

                <!-- Current Value -->
                <TextView
                    android:id="@+id/tvStockCurrentValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Current Value: $150"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <!-- Profit/Loss -->
            <TextView
                android:id="@+id/tvStockProfitLoss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profit/Loss: $50"
                android:textColor="@android:color/holo_green_light"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
